{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "removedb": "rm -rf ../pgdb",
    "initdb": "initdb -D ../pgdb/",
    "postgres": "postgres -D ../pgdb/ -k '' >db.log 2>&1 &",
    "createdb": "createdb -h localhost forward_pay",
    "builddb": "node -r esm ./persistence/buildDatabase.js",
    "start": "nodemon -r esm backend.js 4000",
    "stoppostgres": "pkill postgres",
    "prod": "pm2 start backend.js --node-args='-r esm' -- 443"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemon": "^2.0.4",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.4.1",
    "sequelize": "^6.3.5"
  }
}
